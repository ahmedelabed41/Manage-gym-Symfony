{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="bg-image d-flex align-items-center justify-content-center" style="background-image: url('{{ asset('front/assets/img/hero/hero-1.jpg') }}'); background-size: cover; background-position: center; width: 100vw; height: 100vh; background-color: #101010a1;">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="text-white text-center mb-4">Changer le mot de passe</h1>
            <div class="col-4 my-4">
                <form action="{{ path('change_password') }}" method="post">
                    <div class="mb-4">
                        <input type="password" placeholder="Saisir votre mot de passe actuel" id="current_password" name="current_password" class="form-control" required>
                    </div>
                
                    <div class="mb-4">
                        <input type="password" placeholder="Tapez votre nouveau mot de passe" id="new_password" name="new_password" class="form-control" required>
                    </div>
                
                    <div class="mb-4
                    ">
                        <input type="password" placeholder="RÃ©tapez votre nouveau mot de passe" id="confirm_password" name="confirm_password" class="form-control" required>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-success my-4" type="submit" style="margin-right: 20px">Changer le mot de passe</button>
                        <button class="btn btn-secondary my-4" type="button" onclick="goBack()">Retour</button>
                    </div>
                    {% if successMessage is defined %}
                        <div class="alert alert-success text-center" role="alert">
                            {{ successMessage }}
                        </div>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>

{% endblock %}


