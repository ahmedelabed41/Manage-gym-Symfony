{% extends 'basefront.html.twig' %}

{% block title %} {{ exercice.nom }} {% endblock %}

{% block stylesheets %}{% endblock %}

{% block container %}
<!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

 <!-- Offcanvas Menu Section Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="canvas-close">
            <i class="fa fa-close"></i>
        </div>
        <div class="canvas-search search-switch">
            <i class="fa fa-search"></i>
        </div>
        <nav class="canvas-menu mobile-menu">
            <ul>
                <li><a href="{{path('index')}}">Accueil</a></li>
                <li><a href="{{path('about_us')}}">Ã€ propos</a></li>
                <li><a href="{{path('services')}}">Services</a></li>
                <li><a href="{{path('contact')}}">Contact</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="canvas-social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-youtube-play"></i></a>
            <a href="#"><i class="fa fa-instagram"></i></a>
        </div>
    </div>
    <!-- Offcanvas Menu Section End -->

<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{asset('front/assets/img/breadcrumb-bg.jpg')}}" style="height: 800px">
        <div class="container" >
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text" style="margin-bottom: 60px">
                        <h2>{{ exercice.nom }}</h2>
                    </div>
                    <div class="breadcrumb-text" style="margin-bottom: 100px">
                        <h3 style="color: white">{{ exercice.description }}</h3>
                    </div>
                    <div>
                            {% for videoExercice in exercice.getVideoExercices() %}
                                <video width="260" height="180" controls>
                                    <source src="{{ asset('uploads/videos/' ~ videoExercice.getVideo()) }}" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            {% endfor %}
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->




{% endblock %}
