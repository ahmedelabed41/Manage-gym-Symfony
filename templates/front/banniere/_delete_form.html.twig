<form method="post" action="{{ path('app_front_banniere_delete', {'id': banniere.id}) }}" onsubmit="return confirm('Are you sure you want to delete this banniere ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ banniere.id) }}">
    <button type="submit" class="btn" style="background: none; border: none; padding: 0;">
        <i class="fas fa-trash-alt" style="color:red; font-size: 18px"></i>
    </button>
</form>

