{% block title %}Abonnement{% endblock %}

{% block container %}

<div class="container d-flex justify-content-center" style="margin-top: 120px">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-lg-12 m-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header-2" style="margin-bottom: 20px">
                                <h3 class="text-center">Les informations de l'abonnement</h3>
                            </div>
                            <div >
    <form action="url_de_traitement" method="POST">
    <div class="form-group">
