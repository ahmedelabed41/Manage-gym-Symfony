        <label style="color: white; margin-left: 15px">{{ abonnement.dateDebut }}</label>
    </div>
    <div class="form-group">
        <label for="telephone" style="text-decoration: underline">Date fin :</label>
        <label style="color: white; margin-left: 15px">{{ abonnement.dateFin }}</label>
    </div>
    <div class="form-group">
        <label for="email" style="text-decoration: underline">Description :</label>
        <label style="color: white; margin-left: 15px">{{ abonnement.description }}</label>
    </div>
    <div class="form-group">
        <label for="" style="text-decoration: underline">Payement :</label>
