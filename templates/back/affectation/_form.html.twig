{{ form_start(form) }}

<div class="mb-4 row align-users-center">
    <label class="form-label-title col-sm-3 mb-0">Adh√©rent : </label>
    <div class="col-sm-6">
        <select class="form-control" name="user">
            {% for item in users %}
                <option value="{{ item.id }}" 
                        {% if affectation.adherent and affectation.adherent.id == item.id %}selected{% endif %}>
                    {{ item.nom }} {{ item.prenom }}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="mb-4 row align-users-center">
    <label class="form-label-title col-sm-3 mb-0">Coach : </label>
    <div class="col-sm-6">
        <select class="form-control" name="coach">
            {% for coachUser in coachUsers %}
                <option value="{{ coachUser.id }}" 
                        {% if affectation.coach and affectation.coach.id == coachUser.id %}selected{% endif %}>
                    {{ coachUser.nom }} {{ coachUser.prenom }}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-center" style="margin-top: 50px">
    <button type="submit" class="btn btn-primary mr-3">{{ button_label|default('Enregistrer') }}</button>
    <button type="button" class="btn btn-secondary mx-4" onclick="goBack()">Retour</button>
</div>

{{ form_end(form) }}

<script>
    function goBack() {
        window.history.back();
    }
</script>
