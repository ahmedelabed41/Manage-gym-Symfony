
{% extends 'baseback.html.twig' %}

{% block title %}Affectation index{% endblock %}

{% block container %}
 <!-- Container-fluid starts-->
 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
            <div class="page-body">
                <!-- All Affectation Table Start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-table">
                                <div class="card-body">
                                    <div class="title-header option-title">
                                        <h5>Tous les affectations</h5>
                                    </div>

                                    <div class="table-responsive affectation-table">
                                        <div>
                                            <table class="table all-package theme-table" id="table_id">
                                                <thead>
                                                    <tr>
                                                        <th>Id</th>
                                                        <th>Nom et prénom de l'adhérent</th>
                                                        <th>Nom et prénom du coach</th>
                                                        <th>Statut</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                {% for affectation in affectations %}
                                                <tr>
                                                    <td>{{ affectation.id }}</td>
                                                    <td>
                                                        {% if affectation.adherent %}
                                                            {{ affectation.adherent.nom }} {{ affectation.adherent.prenom }}
                                                        {% else %}
                                                            N/A
                                                        {% endif %}
                                                        
                                                    </td>
                                                    <td>
                                                        {% if affectation.coach %}
                                                            {{ affectation.coach.nom }} {{ affectation.coach.prenom }}
                                                        {% else %}
                                                            N/A
                                                        {% endif %}
                                                    </td>
                                                    {% if affectation.statut == 'en attente' %}
                                                        <td style="color: #FFC107">{{ affectation.statut }}</td>
                                                        {% else %}
                                                        <td style="color: #28A745">{{ affectation.statut }}</td>
                                                        {% endif %}
                                                    <td>
                                                        <div style="display: flex;">
                                                            <div style="display: inline;">
                                                                <ul style="list-style-type: none; padding: 0; margin: 0;">
                                                                    <li style="display: inline;">
                                                                        <a href="{{ path('app_back_affectation_show', {'id': affectation.id}) }}">
                                                                            <i class="fas fa-eye" style="color:green; font-size: 18px"></i>
                                                                        </a>
                                                                    </li>
                                                                    <li style="display: inline; margin-left: 10px">
                                                                        <a href="{{ path('app_back_affectation_edit', {'id': affectation.id}) }}">
                                                                            <i class="fas fa-pencil-alt" style="font-size: 18px"></i>
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                            <div style="display: inline; margin-left: 10px">
                                                                {{ include('back/affectation/_delete_form.html.twig') }}
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                <!-- All Affectation Table Ends-->

{% endblock %}





