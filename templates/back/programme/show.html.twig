{% extends 'baseback.html.twig' %}

{% block title %}Programme{% endblock %}

{% block container %}

<div class="container d-flex justify-content-center" style="margin-top: 120px">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-lg-12 m-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header-2" style="margin-bottom: 20px">
                                <h3 class="text-center">Les informations du programme</h3>
                            </div>
                            <div >
    <form action="url_de_traitement" method="POST">
    <div class="form-group">
        <label for="id" style="text-decoration: underline">Id : </label>
        <label style="color: white; margin-left: 15px">{{ programme.id }}</label>
    </div>
    <div class="form-group">
        <label for="id" style="text-decoration: underline">Adhérent : </label>
        <label style="color: white; margin-left: 15px">{{ programme.userId.nom }} {{ programme.userId.prenom }}</label>
    </div>
    <div class="form-group">
        <label for="id" style="text-decoration: underline">Type : </label>
        <label style="color: white; margin-left: 15px">{{ programme.typeId.libelle }}</label>
    </div>
    <div class="form-group">
        <label for="date" style="text-decoration: underline">Date debut : </label>
        <label style="color: white; margin-left: 15px">{{ programme.dateDebut }}</label>
    </div>
    <div class="form-group">
        <label for="date" style="text-decoration: underline">Date fin : </label>
        <label style="color: white; margin-left: 15px">{{ programme.dateFin }}</label>
    </div>
    <div class="form-group">
        <label for="etat" style="text-decoration: underline">Etat : </label>
        <label style="color: white; margin-left: 15px">{{ programme.etat }}</label>
    </div>
    
    <!-- Vous pouvez ajouter d'autres champs ici si nécessaire -->
</form>
</div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center my-4">
        <button class="btn btn-secondary mx-4" onclick="goBack()">Retour</button>
    </div>
    


    {#<a href="{{ path('app_back_programme_index') }}">back to list</a>#}

    <a href="{{ path('app_back_programme_edit', {'id': programme.id}) }}">edit</a>

    {{ include('back/programme/_delete_form.html.twig') }}

    <script>
    function goBack() {
        window.history.back();
    }
</script>
{% endblock %}












